<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Baza rozmów</h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="<%= root_path %>">Strona Główna</a>
      </li>
      <li class="breadcrumb-item active">
        <strong>Baza rozmów</strong>
      </li>
    </ol>
  </div>
</div>

<%= flash_messages %>

<div class="ibox">
  <div class="ibox-title">
    <h3>Baza rozmów</h3>
    <div class="ibox-tools">
      <%= link_to new_call_path, class: "btn btn-sm btn-primary" do %>
      <i class="fa fa-plus"></i> Dodaj rozmowę
      <% end %>
    </div>
  </div>
  <div class="ibox-content">
    <%= render 'calls' %>
  </div>
</div>

<%= content_for :searchbar do %>
<%= search_form_for @q, class: "navbar-form-custom" do |f| %>
  <div class="form-group">
      <%= f.search_field :client_nazwisko_or_client_imie_or_user_email_or_screenplay_name_cont, placeholder: "Wyszukaj rozmowę", id: "top-search", class: "form-control" %>
  </div>
<% end %>
<% end %>
