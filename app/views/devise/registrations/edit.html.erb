<h2>Ustawienia konta</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: "Hasło",
                hint: "pozostaw puste jeśli nie chcesz go zmieniać",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: "Potwierdzenia hasła",
                hint: "pozostaw puste jeśli nie chcesz go zmieniać",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password, label: "Aktualne hasło",
                hint: "jest potrzebne do zmiany hasła",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zapisz zmiany", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>

<hr>
<h3>Usunięcie konta</h3>

<p>Masz już dość? <%= link_to "Usuń moje konto", registration_path(resource_name), data: { confirm: "Czy na pewno chcesz usunąć swoje konto z systemu?" }, method: :delete %></p>

<%= link_to "Cofnij", :back %>
