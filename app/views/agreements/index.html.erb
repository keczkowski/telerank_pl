<h1>Agreements</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>User</th>
      <th>Client</th>
      <th>Partner</th>
      <th>Rozmowa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agreements.each do |agreement| %>
      <tr>
        <td><%= agreement.name %></td>
        <td><%= agreement.body %></td>
        <td><%= agreement.user_id %></td>
        <td><%= agreement.client_id %></td>
        <td><%= agreement.partner_id %></td>
        <td><%= agreement.call_id %></td>
        <td><%= link_to 'Show', agreement %></td>
        <td><%= link_to 'Edit', edit_agreement_path(agreement) %></td>
        <td><%= link_to 'Destroy', agreement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

