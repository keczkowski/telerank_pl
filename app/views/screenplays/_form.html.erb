
<%= simple_form_for(@screenplay) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nazwa" %>
    <%= f.input :body, label: "Opis" %>
    <%= f.input :prelude, label: "WstÄ™p" %>
    <%= f.input :ending, label: "ZakoÅ„czenie" %>
    <% if params[:partner_id] %>
      <% @partner = Partner.find(params[:partner_id]) %>
    <% end %>
    <% if @partner.present? %>
      Partner: <%= @partner.name %>
      <hr>
    <% else %>
      <%= f.association :partner, input_html: { class: "select2" } %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zapisz", class: "btn btn-primary" %>
  </div>
<% end %>
