<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Klient</h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="<%= root_path %>">Strona Główna</a>
      </li>
      <li class="breadcrumb-item">
        <a href="<%= clients_path %>">Baza klientów</a>
      </li>
      <li class="breadcrumb-item active">
        <strong>Klient</strong>
      </li>
    </ol>
  </div>
</div>

<div class="ibox">
  <div class="ibox-title">
    <h3>Klient</h3>
    <div class="ibox-tools">
      <%= link_to clients_path, class: "btn btn-sm btn-primary" do %>
      Wróć
      <% end %>
      <%= link_to edit_client_path(@client), class: "btn btn-sm btn-primary" do %>
      Edytuj
      <% end %>
    </div>
  </div>
  <div class="ibox-content">
    <p>
      <strong>Imie:</strong>
      <%= @client.imie %>
    </p>

    <p>
      <strong>Nazwisko:</strong>
      <%= @client.nazwisko %>
    </p>

    <p>
      <strong>Numer telefonu:</strong>
      <%= @client.numer_telefonu %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @client.email %>
    </p>

    <p>
      <strong>Miasto:</strong>
      <%= @client.miasto %>
    </p>

    <p>
      <strong>Kod:</strong>
      <%= @client.kod %>
    </p>

    <p>
      <strong>Adres:</strong>
      <%= @client.adres %>
    </p>
  </div>
</div>

<%= content_for :searchbar do %>

<% end %>
